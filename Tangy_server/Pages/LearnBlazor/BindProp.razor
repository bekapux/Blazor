@page "/learn-blazor/bind-prop"

<h3>BindProp</h3>

Id: @product.Name
<br />
Name: @product.Name
<br />
Active: @product.IsActive
<br />
Price: @product.Price $
<br />
Property Selected : @selectedProp <br/>


Active:
<input type="checkbox" @bind-value="@product.IsActive" checked="@product.IsActive" />
<br />
Price:
<input type="number" @bind="@product.Price" @bind:event="oninput" />
<br/>

Product Properties: <br/>
<select @bind="@selectedProp">
    @foreach(var item in product.ProductProperties)
    {
        <option value="@item.Key">@item.Key</option>
    }
</select>

@code {
    private string selectedProp = "";
    Demo_Product product = new Demo_Product
    {
        Id = 1,
        Name = "Rosa Candle",
        IsActive = false,
        Price = 10.99,
        ProductProperties = new List<Demo_ProductProp>()
        {
            new Demo_ProductProp {Id= 1,Key= "Color",Value = "Black"},
            new Demo_ProductProp{Id= 2,Key= "Flavor",Value = "Rose Jasmine"},
            new Demo_ProductProp{Id= 3,Key= "Size",Value = "20oz"},
        }
    };
}
